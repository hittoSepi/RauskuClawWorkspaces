# Infisical
INFISICAL_SITE_URL=http://localhost:8088
INFISICAL_ENCRYPTION_KEY=
INFISICAL_AUTH_SECRET=
INFISICAL_DB_PASSWORD=infisical
INFISICAL_DB_USER=infisical
INFISICAL_DB_NAME=infisical

# Proxy
PROXY_SHARED_TOKEN=
INFISICAL_PROJECT_ID=
INFISICAL_ENV=prod
INFISICAL_SERVICE_TOKEN=
# Shared Infisical endpoint for holvi-proxy (default points to host)
INFISICAL_BASE_URL=http://host.docker.internal:8088
# local = start postgres+redis+infisical in this compose, shared = external shared Infisical
HOLVI_INFISICAL_MODE=shared

# Optional: bind proxy only to localhost on host
# HOLVI_BIND=127.0.0.1

# Hardening options (defaults shown)
MAX_BODY_BYTES=262144
RATE_LIMIT_CAPACITY=100
RATE_LIMIT_REFILL_RATE=10
REQUEST_TIMEOUT_MS=30000
CONNECT_TIMEOUT_MS=5000
