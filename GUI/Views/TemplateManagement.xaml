<UserControl x:Class="RauskuClaw.GUI.Views.TemplateManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="900">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBox Width="240" Margin="0,0,8,0" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" ToolTip="Hae nimellÃ¤, kategorialla tai palvelulla"/>
            <ComboBox x:Name="CategoryFilter" Width="180" Margin="0,0,8,0"
                      Style="{StaticResource TemplatePanelComboBoxStyle}"
                      ItemsSource="{Binding Categories}" SelectedItem="{Binding CategoryFilter}"/>
            <Button Content="New" Command="{Binding NewTemplateCommand}" Margin="0,0,6,0"/>
            <Button Content="Save custom" Command="{Binding SaveTemplateCommand}" Margin="0,0,6,0"/>
            <Button Content="Delete custom" Command="{Binding DeleteTemplateCommand}" Margin="0,0,6,0"/>
            <Button Content="Import" Command="{Binding ImportTemplateCommand}" Margin="0,0,6,0"/>
            <Button Content="Export" Command="{Binding ExportTemplateCommand}" Margin="0,0,6,0"/>
            <Button Content="Refresh" Command="{Binding RefreshCommand}"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ListBox x:Name="FilteredTemplates" Grid.Column="0"
                     Style="{StaticResource TemplatePanelListBoxStyle}"
                     ItemsSource="{Binding FilteredTemplates}" SelectedItem="{Binding SelectedTemplate}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="4">
                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="#E6EAF2"/>
                            <TextBlock Text="{Binding Category}" FontSize="11" Foreground="#CFD7E6"/>
                            <TextBlock Text="{Binding Source}" FontSize="10" Foreground="#A9B4C8"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Border Grid.Column="2" BorderBrush="#2A3240" BorderThickness="1" CornerRadius="4" Padding="12,10">
                <StackPanel DataContext="{Binding SelectedTemplate}">
                    <StackPanel.Resources>
                        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#9AA3B2"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Margin" Value="0,0,0,4"/>
                        </Style>
                        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#C2CAD8"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Margin" Value="0,12,0,6"/>
                        </Style>
                    </StackPanel.Resources>

                    <TextBlock Text="Template details" FontWeight="Bold" FontSize="19" Foreground="#E6EAF2" Margin="0,0,0,8"/>
                    <TextBlock Margin="0,0,0,8" Text="{Binding Source, StringFormat=Source: {0}}" Foreground="#9AA3B2" FontSize="12"/>

                    <TextBlock Text="Basic info" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,6"/>
                    <TextBlock Text="Template ID" Style="{StaticResource FieldLabelStyle}"/>
                    <TextBox Margin="0,0,0,10" Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding DataContext.IsCustomSelected, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

                    <TextBlock Text="Name" Style="{StaticResource FieldLabelStyle}"/>
                    <TextBox Margin="0,0,0,10" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding DataContext.IsCustomSelected, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

                    <TextBlock Text="Category" Style="{StaticResource FieldLabelStyle}"/>
                    <TextBox Margin="0,0,0,10" Text="{Binding Category, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding DataContext.IsCustomSelected, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

                    <TextBlock Text="Description" Style="{StaticResource FieldLabelStyle}"/>
                    <TextBox Margin="0,0,0,10" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding DataContext.IsCustomSelected, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

                    <TextBlock Text="VM defaults" Style="{StaticResource SectionHeaderStyle}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <StackPanel Width="120" Margin="0,0,8,0">
                            <TextBlock Text="CPU" Style="{StaticResource FieldLabelStyle}"/>
                            <ComboBox ItemsSource="{Binding DataContext.CpuCoreOptions, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                      SelectedItem="{Binding CpuCores, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="{Binding DataContext.IsCustomSelected, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                        </StackPanel>
                        <StackPanel Width="120">
                            <TextBlock Text="Memory" Style="{StaticResource FieldLabelStyle}"/>
                            <ComboBox ItemsSource="{Binding DataContext.MemoryOptions, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                      SelectedItem="{Binding MemoryMb, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="{Binding DataContext.IsCustomSelected, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Text="Username" Style="{StaticResource FieldLabelStyle}"/>
                    <TextBox Margin="0,0,0,10" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding DataContext.IsCustomSelected, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

                    <TextBlock Text="Hostname" Style="{StaticResource FieldLabelStyle}"/>
                    <TextBox Margin="0,0,0,10" Text="{Binding Hostname, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding DataContext.IsCustomSelected, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

                    <TextBlock Text="Ports &amp; Services" Style="{StaticResource SectionHeaderStyle}"/>
                    <TextBlock Text="Ports (Name:Port, comma separated)" Style="{StaticResource FieldLabelStyle}"/>
                    <TextBox Margin="0,0,0,10" Text="{Binding DataContext.PortsCsv, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding DataContext.IsCustomSelected, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

                    <TextBlock Text="Enabled services (comma separated)" Style="{StaticResource FieldLabelStyle}"/>
                    <TextBox Text="{Binding DataContext.ServicesCsv, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding DataContext.IsCustomSelected, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </StackPanel>
            </Border>
        </Grid>

        <StackPanel Grid.Row="2" Margin="0,8,0,0">
            <TextBlock Text="{Binding StatusMessage}" Foreground="#9AA3B2"/>
            <TextBlock Text="{Binding ValidationDetails}" TextWrapping="Wrap" Foreground="#9AA3B2" Margin="0,4,0,0" FontSize="11"/>
        </StackPanel>
    </Grid>
</UserControl>
