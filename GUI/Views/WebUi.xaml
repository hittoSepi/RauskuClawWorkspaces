<UserControl x:Class="RauskuClaw.GUI.Views.WebUi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#0F1115">
    <Grid>
        <wpf:WebView2 x:Name="WebView"
                      Source="{Binding CurrentUrl}"
                      DefaultBackgroundColor="#0F1115"
                      Visibility="{Binding IsVmRunning, Converter={StaticResource BoolToVisibilityConverter}}"/>

        <Border Background="#05070C"
                Visibility="{Binding IsVmRunning, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            <Grid>
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Text="WORKSPACE IS STOPPED"
                               Foreground="#D6D9DF"
                               FontSize="56"
                               FontWeight="Light"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,28"/>
                    <Button Command="{Binding DataContext.StartVmCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            Style="{StaticResource GreenIconButton}"
                            Tag="Play"
                            Content="Start"
                            Padding="28,16"
                            FontSize="28"
                            HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>

