<UserControl x:Class="RauskuClaw.GUI.Views.WebUi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#0F1115">
    <DockPanel>
            <!-- Status bar when VM not running -->
            <Border DockPanel.Dock="Top"
                    Background="#D29922"
                    Padding="16,12"
                    Visibility="{Binding IsVmRunning, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="âš " FontSize="16" Margin="0,0,8,0"/>
                    <TextBlock Text="VM is not running. Start the workspace to access the RauskuClaw UI."
                               FontWeight="SemiBold"
                               Foreground="#0F1115"/>
                </StackPanel>
            </Border>

            <!-- Placeholder when VM not running -->
            <Border DockPanel.Dock="Top"
                    Background="#0A0C0E"
                    Padding="16"
                    Visibility="{Binding IsVmRunning, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                <TextBlock Text="No VM running"
                           HorizontalAlignment="Center"
                           Foreground="#6A7382"
                           FontSize="14"/>
            </Border>

            <!-- WebView2 control (when VM is running) -->
            <wpf:WebView2 x:Name="WebView"
                          Source="{Binding CurrentUrl}"
                          DefaultBackgroundColor="#0F1115"
                          Visibility="{Binding IsVmRunning, Converter={StaticResource BoolToVisibilityConverter}}"/>
    </DockPanel>
</UserControl>
