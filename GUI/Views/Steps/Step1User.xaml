<UserControl x:Class="RauskuClaw.GUI.Views.Steps.Step1User"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:RauskuClaw.GUI.Views.Steps"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Username" Style="{StaticResource MutedTextBlock}" Padding="0"/>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,0,0,12">
            <TextBlock Text="Hostname" Style="{StaticResource MutedTextBlock}" Padding="0"/>
            <TextBox Text="{Binding Hostname, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,12">
            <TextBlock Text="SSH public key" Style="{StaticResource MutedTextBlock}" Padding="0"/>
            <TextBox Text="{Binding SshPublicKey, UpdateSourceTrigger=PropertyChanged}"
             AcceptsReturn="True" Height="120"/>
        </StackPanel>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                <TextBlock Text="Private key path" Style="{StaticResource MutedTextBlock}" Padding="0"/>
                <TextBox Text="{Binding SshPrivateKeyPath, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <Button Grid.Column="1"
                    Style="{StaticResource SecondaryButton}"
                    Margin="0,24,8,0"
                    Padding="12,4"
                    Command="{Binding BrowsePrivateKeyPathCommand}">
                <StackPanel Orientation="Horizontal">
                    <fa:IconBlock Icon="FolderOpen" Style="{StaticResource FaIconInline}"/>
                    <TextBlock Text="Browse..." Foreground="#E6EAF2"/>
                </StackPanel>
            </Button>
            <Button Grid.Column="2"
                    Style="{StaticResource SecondaryButton}"
                    Margin="0,24,0,0"
                    Command="{Binding GenerateKeyCommand}">
                <StackPanel Orientation="Horizontal">
                    <fa:IconBlock Icon="Key" Style="{StaticResource FaIconInline}"/>
                    <TextBlock Text="Generate key" Foreground="#E6EAF2"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</UserControl>

