<UserControl x:Class="RauskuClaw.GUI.Views.Steps.Step2Resources"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RauskuClaw.GUI.Views.Steps"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  Padding="0,0,4,0">
        <StackPanel>
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,12,0">
                    <TextBlock Text="CPU cores" Style="{StaticResource MutedTextBlock}" Padding="0"/>
                    <TextBox Text="{Binding CpuCores, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="0,0,12,0">
                    <TextBlock Text="Memory (MB)" Style="{StaticResource MutedTextBlock}" Padding="0"/>
                    <TextBox Text="{Binding MemoryMb, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </Grid>

            <TextBlock Text="Host ports" Style="{StaticResource MutedTextBlock}" Padding="0" Margin="0,0,0,4"/>
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="SSH" Style="{StaticResource MutedTextBlock}" Padding="0"/>
                    <TextBox Text="{Binding HostSshPort, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="0,0,10,0">
                    <TextBlock Text="Web" Style="{StaticResource MutedTextBlock}" Padding="0"/>
                    <TextBox Text="{Binding HostWebPort, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Margin="0,0,10,0">
                    <TextBlock Text="QMP" Style="{StaticResource MutedTextBlock}" Padding="0"/>
                    <TextBox Text="{Binding HostQmpPort, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Grid.Column="3">
                    <TextBlock Text="Serial" Style="{StaticResource MutedTextBlock}" Padding="0"/>
                    <TextBox Text="{Binding HostSerialPort, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </Grid>

            <Expander Header="VM paths and executable"
                      IsExpanded="False"
                      Foreground="#E6EAF2"
                      Margin="0,0,0,8">
                <StackPanel Margin="0,8,0,0">
                    <TextBlock Text="QEMU executable" Style="{StaticResource MutedTextBlock}" Padding="0"/>
                    <TextBox Text="{Binding QemuExe, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>

                    <TextBlock Text="Disk path (.qcow2)" Style="{StaticResource MutedTextBlock}" Padding="0"/>
                    <TextBox Text="{Binding DiskPath, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>

                    <TextBlock Text="Seed ISO path" Style="{StaticResource MutedTextBlock}" Padding="0"/>
                    <TextBox Text="{Binding SeedIsoPath, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </Expander>

            <Expander Header="Repository and WebUI deployment"
                      IsExpanded="False"
                      Foreground="#E6EAF2">
                <StackPanel Margin="0,8,0,0">
                    <TextBlock Text="Repository URL" Style="{StaticResource MutedTextBlock}" Padding="0"/>
                    <TextBox Text="{Binding RepoUrl, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="220"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Repository branch" Style="{StaticResource MutedTextBlock}" Padding="0"/>
                            <TextBox Text="{Binding RepoBranch, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Target dir in VM" Style="{StaticResource MutedTextBlock}" Padding="0"/>
                            <TextBox Text="{Binding RepoTargetDir, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </Grid>

                    <CheckBox Content="Run Web UI build command after clone/pull"
                              IsChecked="{Binding BuildWebUi, UpdateSourceTrigger=PropertyChanged}"
                              Foreground="#E6EAF2"
                              Margin="0,0,0,6"/>
                    <StackPanel Visibility="{Binding BuildWebUi, Converter={StaticResource BoolToVisibilityConverter}}" Margin="0,0,0,8">
                        <TextBlock Text="Web UI build command" Style="{StaticResource MutedTextBlock}" Padding="0"/>
                        <TextBox Text="{Binding WebUiBuildCommand, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <CheckBox Content="Deploy Web UI static files to nginx (guest :80)"
                              IsChecked="{Binding DeployWebUiStatic, UpdateSourceTrigger=PropertyChanged}"
                              Foreground="#E6EAF2"
                              Margin="0,0,0,6"/>
                    <StackPanel Visibility="{Binding DeployWebUiStatic, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="Web UI build output dir (relative to repo or absolute path)"
                                   Style="{StaticResource MutedTextBlock}"
                                   Padding="0"/>
                        <TextBox Text="{Binding WebUiBuildOutputDir, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </StackPanel>
            </Expander>
        </StackPanel>
    </ScrollViewer>
</UserControl>
