<UserControl x:Class="RauskuClaw.GUI.Views.Steps.Step3Run"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RauskuClaw.GUI.Views.Steps"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Review &amp; Start"
                   Style="{StaticResource Header}"
                   Padding="0"
                   Margin="0,0,0,8"/>

        <TextBlock Grid.Row="1"
                   Text="{Binding RunSummary}"
                   Style="{StaticResource MutedTextBlock}"
                   Padding="0"
                   TextWrapping="Wrap"
                   Margin="0,0,0,6"/>

        <TextBlock Grid.Row="2"
                   Text="{Binding Status}"
                   Style="{StaticResource MutedTextBlock}"
                   Padding="0"
                   Margin="0,0,0,8"/>

        <Border Grid.Row="3"
                Visibility="{Binding HasAccessInfo, Converter={StaticResource BoolToVisibilityConverter}}"
                Background="#101B2D"
                BorderBrush="#1F6FEB"
                BorderThickness="1"
                CornerRadius="4"
                Padding="10"
                Margin="0,0,0,8">
            <StackPanel>
                <DockPanel Margin="0,0,0,4">
                    <TextBlock Text="Access Info"
                               Foreground="#E6EAF2"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                    <Button Content="Copy"
                            Command="{Binding CopyAccessInfoCommand}"
                            DockPanel.Dock="Right"
                            Padding="8,2"
                            Margin="8,0,0,0"
                            Background="#2A3240"
                            Foreground="#E6EAF2"
                            BorderThickness="0"
                            Cursor="Hand"/>
                </DockPanel>
                <TextBlock Text="{Binding AccessInfo}"
                           Style="{StaticResource MutedTextBlock}"
                           Padding="0"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <ItemsControl Grid.Row="4" ItemsSource="{Binding SetupStages}" Margin="0,0,0,8">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="14"/>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Ellipse Grid.Column="0" Width="10" Height="10" Fill="{Binding Color}" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{Binding Title}" Foreground="#E6EAF2" Margin="8,0,0,0"/>
                        <TextBlock Grid.Column="2" Text="{Binding State}" Foreground="{Binding Color}" HorizontalAlignment="Right"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <TextBox Grid.Row="5"
                 x:Name="RunLogTextBox"
                 Text="{Binding RunLog, Mode=OneWay}"
                 TextChanged="RunLogTextBox_OnTextChanged"
                 IsReadOnly="True"
                 AcceptsReturn="True"
                 Height="220"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 FontFamily="Consolas"
                 TextWrapping="NoWrap"/>
    </Grid>
</UserControl>
