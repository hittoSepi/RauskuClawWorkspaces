<UserControl x:Class="RauskuClaw.GUI.Views.Steps.Step0Template"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="700"
             Background="#151A22">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="4">
            <TextBlock Text="Choose a workspace template to get started:"
                       FontSize="13"
                       Foreground="#E6EAF2"
                       Margin="0,0,0,8"/>

            <ItemsControl ItemsSource="{Binding Templates}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#0A0C0E"
                                BorderBrush="{Binding IsSelected, Converter={StaticResource BoolToBorderColorConverter}}"
                                BorderThickness="2"
                                CornerRadius="4"
                                Padding="12"
                                Margin="0,3,0,3"
                                Cursor="Hand">
                            <Border.InputBindings>
                                <MouseBinding Gesture="LeftClick" Command="{Binding SelectTemplateCommand}" CommandParameter="{Binding}"/>
                            </Border.InputBindings>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="{Binding Icon}" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Top"/>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding Name}" FontSize="15" FontWeight="SemiBold" Foreground="#E6EAF2"/>
                                    <TextBlock Text="{Binding Description}" FontSize="11" Foreground="#9AA3B2" TextWrapping="Wrap" Margin="0,3,0,6"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                        <Border Background="#2A3240" Padding="6,3" CornerRadius="4" Margin="0,0,6,0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="CPU" FontSize="10" Margin="0,0,4,0" Foreground="#9AA3B2"/>
                                                <TextBlock Text="{Binding CpuCores}" FontSize="10" Foreground="#E6EAF2"/>
                                                <TextBlock Text=" cores" FontSize="10" Foreground="#9AA3B2" Margin="4,0,0,0"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Background="#2A3240" Padding="6,3" CornerRadius="4" Margin="0,0,6,0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="RAM" FontSize="10" Margin="0,0,4,0" Foreground="#9AA3B2"/>
                                                <TextBlock Text="{Binding MemoryMb}" FontSize="10" Foreground="#E6EAF2"/>
                                                <TextBlock Text=" MB" FontSize="10" Foreground="#9AA3B2" Margin="4,0,0,0"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Background="#23455f" Padding="6,3" CornerRadius="4" Margin="0,0,6,0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Type" FontSize="10" Margin="0,0,4,0" Foreground="#9AA3B2"/>
                                                <TextBlock Text="{Binding Category}" FontSize="10" Foreground="#E6EAF2"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Background="#23455f" Padding="6,3" CornerRadius="4" Margin="0,0,6,0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Source" FontSize="10" Margin="0,0,4,0" Foreground="#9AA3B2"/>
                                                <TextBlock Text="{Binding Source}" FontSize="10" Foreground="#E6EAF2"/>
                                            </StackPanel>
                                        </Border>

                                    </StackPanel>

                                    <ItemsControl ItemsSource="{Binding EnabledServices}" Margin="0,6,0,0">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#1a2f38" Padding="5,2" CornerRadius="3" Margin="0,0,4,0">
                                                    <TextBlock Text="{Binding}" FontSize="9" Foreground="#4DA3FF"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <Ellipse Grid.Column="1"
                                         Width="14"
                                         Height="14"
                                         VerticalAlignment="Top"
                                         HorizontalAlignment="Right"
                                         Fill="{Binding IsSelected, Converter={StaticResource BoolToFillConverter}}"
                                         Stroke="#4DA3FF"
                                         StrokeThickness="2"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Border Background="#0A0C0E" BorderBrush="#2A3240" BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,6,0,0" Cursor="Hand">
                <Border.InputBindings>
                    <MouseBinding Gesture="LeftClick" Command="{Binding SelectCustomCommand}"/>
                </Border.InputBindings>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="*" FontSize="20" Margin="0,0,12,0"/>
                    <StackPanel>
                        <TextBlock Text="Custom Configuration" FontSize="13" FontWeight="SemiBold" Foreground="#E6EAF2"/>
                        <TextBlock Text="Configure all settings manually in the next steps" FontSize="10" Foreground="#9AA3B2"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <TextBlock Text="Tip: You can still fine-tune all values in the next steps."
                       FontSize="10"
                       Foreground="#6A7382"
                       FontStyle="Italic"
                       Margin="0,8,0,0"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>

