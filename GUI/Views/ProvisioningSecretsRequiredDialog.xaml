<Window x:Class="RauskuClaw.GUI.Views.ProvisioningSecretsRequiredDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        SizeToContent="Height"
        Width="560"
        Background="#0F1115"
        WindowStartupLocation="CenterOwner">
    <Border BorderBrush="#2A3240" BorderThickness="1" Background="#0F1115">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="42"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="#151A22" MouseLeftButtonDown="TitleBar_OnMouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Provisioning paused" Foreground="#E6EAF2" VerticalAlignment="Center" Margin="12,0,0,0" FontWeight="SemiBold"/>
                <Button Grid.Column="1" Content="X" Width="34" Height="24" Margin="0,0,8,0" VerticalAlignment="Center" Click="CloseButton_OnClick"/>
            </Grid>

            <StackPanel Grid.Row="1" Margin="16,14,16,10">
                <TextBlock Foreground="#E6EAF2"
                           TextWrapping="Wrap"
                           Text="Startup is paused because provisioning secrets could not be loaded from secret manager credentials."/>

                <TextBlock Foreground="#9AA3B2" Margin="0,10,0,0" TextWrapping="Wrap"
                           Text="Required credentials:"/>
                <TextBlock Foreground="#E6EAF2" Margin="8,6,0,0" Text="• Holvi: API Key + Project ID"/>
                <TextBlock Foreground="#E6EAF2" Margin="8,2,0,0" Text="• Infisical: Client ID + Client Secret"/>

                <Border Margin="0,12,0,0" Padding="10,8" BorderBrush="#2A3240" BorderThickness="1" Background="#151A22">
                    <TextBlock Foreground="#9AA3B2" TextWrapping="Wrap"
                               Text="Open Settings > Secrets, save credentials, then return and choose retry."/>
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,12,12">
                <Button Content="Avaa Settings > Secrets" Width="170" Margin="0,0,8,0" Click="OpenSettingsButton_OnClick"/>
                <Button Content="Yritä uudelleen" Width="120" Margin="0,0,8,0" Click="RetryButton_OnClick"/>
                <Button Content="Jatka local template -tilassa" Width="190" Click="FallbackButton_OnClick"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
