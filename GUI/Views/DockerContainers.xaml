<UserControl x:Class="RauskuClaw.GUI.Views.DockerContainers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#0F1115">
    <DockPanel>
            <!-- Toolbar -->
            <DockPanel DockPanel.Dock="Top" LastChildFill="False">
                <TextBlock Text="Docker Containers" FontWeight="SemiBold" Foreground="#E6EAF2" VerticalAlignment="Center" Margin="12,8,0,8"/>
                <TextBlock Text="{Binding StatusText}" Foreground="#9AA3B2" VerticalAlignment="Center" Margin="12,8,0,8"/>
                <Button Command="{Binding RefreshCommand}" Background="#2A3240" Foreground="#E6EAF2" BorderThickness="0" Padding="12,4" DockPanel.Dock="Right" Cursor="Hand" Margin="0,8,12,8">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconBlock Icon="Refresh" Style="{StaticResource FaIconInline}"/>
                        <TextBlock Text="Refresh" Foreground="#E6EAF2"/>
                    </StackPanel>
                </Button>
            </DockPanel>

            <!-- Loading indicator -->
            <Border DockPanel.Dock="Top" Background="#151A22" Padding="12,8" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="Loading containers..." Foreground="#9AA3B2" FontSize="12" FontStyle="Italic"/>
            </Border>

            <!-- Containers list -->
            <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Containers}" Background="#0F1115">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#151A22" BorderBrush="#2A3240" BorderThickness="0,0,0,1" Padding="12,8" Margin="0,4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="{Binding Name}" FontWeight="SemiBold" Foreground="#E6EAF2"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Status}" FontSize="11" Foreground="#9AA3B2"/>
                                    <TextBlock Grid.Column="2" Text="{Binding Ports}" FontSize="11" Foreground="#6A7382" TextTrimming="CharacterEllipsis" Margin="0,0,12,0"/>

                                    <StackPanel Grid.Column="3" Orientation="Horizontal">
                                        <Button Command="{Binding RestartCommand}"
                                                Background="#2A3240" Foreground="#E6EAF2"
                                                BorderThickness="0"
                                                Padding="8,4"
                                                Margin="0,0,4,0"
                                                Cursor="Hand">
                                            <StackPanel Orientation="Horizontal">
                                                <fa:IconBlock Icon="Refresh" Style="{StaticResource FaIconInline}"/>
                                                <TextBlock Text="Restart" Foreground="#E6EAF2"/>
                                            </StackPanel>
                                        </Button>
                                        <Button Command="{Binding ShowLogsCommand}"
                                                Background="#2A3240" Foreground="#E6EAF2"
                                                BorderThickness="0"
                                                Padding="8,4"
                                                Cursor="Hand">
                                            <StackPanel Orientation="Horizontal">
                                                <fa:IconBlock Icon="ListAlt" Style="{StaticResource FaIconInline}"/>
                                                <TextBlock Text="Logs" Foreground="#E6EAF2"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Logs overlay (when viewing container logs) -->
            <Popup IsOpen="{Binding ShowLogs}" Placement="Center" Width="800" Height="600">
                <Border Background="#151A22" BorderBrush="#2A3240" BorderThickness="1" Padding="16">
                    <DockPanel>
                        <TextBlock Text="Container Logs" FontWeight="SemiBold" Foreground="#E6EAF2" DockPanel.Dock="Top" Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding SelectedContainerName}" Foreground="#9AA3B2" DockPanel.Dock="Top" Margin="0,0,0,12"/>
                        <TextBox Text="{Binding SelectedContainerLogs, Mode=OneWay}"
                                 IsReadOnly="True"
                                 FontFamily="Consolas"
                                 Background="#0A0C0E"
                                 Foreground="#E6EAF2"
                                 VerticalScrollBarVisibility="Auto"
                                 Padding="8"/>
                        <Button
                                Command="{Binding CloseLogsCommand}"
                                Background="#2A3240"
                                Foreground="#E6EAF2"
                                BorderThickness="0"
                                Padding="12,4"
                                HorizontalAlignment="Right"
                                DockPanel.Dock="Bottom"
                                Margin="0,12,0,0"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconBlock Icon="Times" Style="{StaticResource FaIconInline}"/>
                                <TextBlock Text="Close" Foreground="#E6EAF2"/>
                            </StackPanel>
                        </Button>
                    </DockPanel>
                </Border>
            </Popup>
    </DockPanel>
</UserControl>

