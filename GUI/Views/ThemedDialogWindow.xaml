<Window x:Class="RauskuClaw.GUI.Views.ThemedDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        SizeToContent="Height"
        Width="420"
        Background="#0F1115"
        WindowStartupLocation="CenterOwner">
    <Border BorderBrush="#2A3240" BorderThickness="1" Background="#0F1115">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="42"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="#151A22" MouseLeftButtonDown="TitleBar_OnMouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="TitleText" Foreground="#E6EAF2" VerticalAlignment="Center" Margin="12,0,0,0" FontWeight="SemiBold"/>
                <Button Grid.Column="1" Content="X" Width="34" Height="24" Margin="0,0,8,0" VerticalAlignment="Center" Click="CloseButton_OnClick"/>
            </Grid>

            <TextBlock x:Name="MessageText" Grid.Row="1" Foreground="#E6EAF2" TextWrapping="Wrap" Margin="16,14,16,10"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,12,12">
                <Button x:Name="YesButton" Content="Yes" Width="86" Margin="0,0,8,0" Click="YesButton_OnClick"/>
                <Button x:Name="NoButton" Content="No" Width="86" Margin="0,0,8,0" Click="NoButton_OnClick"/>
                <Button x:Name="OkButton" Content="OK" Width="86" Click="OkButton_OnClick"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
