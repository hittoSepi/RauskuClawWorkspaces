<Window x:Class="RauskuClaw.GUI.Views.VmActionProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Width="420"
        Height="170"
        Background="#0F1115"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <Style x:Key="TitleBarCloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#151A22"/>
            <Setter Property="Foreground" Value="#E6EAF2"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C42B1C"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#8F1D14"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Border BorderBrush="#2A3240" BorderThickness="1" Background="#0F1115">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="46"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="#151A22" MouseLeftButtonDown="TitleBar_OnMouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="TitleText"
                           VerticalAlignment="Center"
                           Foreground="#E6EAF2"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="12,0,0,0"/>
                <Button Grid.Column="1"
                        Style="{StaticResource TitleBarCloseButtonStyle}"
                        Content="X"
                        Margin="0,0,8,0"
                        VerticalAlignment="Center"
                        Click="CloseButton_OnClick"/>
            </Grid>

            <TextBlock x:Name="StatusText"
                       Grid.Row="2"
                       Foreground="#9AA3B2"
                       FontSize="13"
                       TextWrapping="Wrap"
                       Margin="16,12,16,12"/>

            <ProgressBar Grid.Row="3"
                         IsIndeterminate="True"
                         Height="8"
                         Margin="16,0,16,16"
                         Foreground="#4DA3FF"
                         Background="#1A2130"/>
        </Grid>
    </Border>
</Window>

