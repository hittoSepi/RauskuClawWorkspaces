<Window x:Class="RauskuClaw.GUI.Views.WizardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:local="clr-namespace:RauskuClaw.GUI.Views"
        mc:Ignorable="d"
        Title="New Workspace Wizard"
        MinHeight="560"
        MaxHeight="820"
        Width="800"
        Style="{StaticResource WizardWindow}"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <Style x:Key="TitleBarCloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#151A22"/>
            <Setter Property="Foreground" Value="#E6EAF2"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C42B1C"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#8F1D14"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Border BorderBrush="#2A3240" BorderThickness="1" Background="{StaticResource Bg}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="46"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"
                  Background="#151A22"
                  MouseLeftButtonDown="TitleBar_OnMouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="New Workspace Wizard"
                           VerticalAlignment="Center"
                           Foreground="#E6EAF2"
                           FontSize="14"
                           Margin="12,0,0,0"/>
                <Button Grid.Column="1"
                        Content="X"
                        Style="{StaticResource TitleBarCloseButtonStyle}"
                        Width="36"
                        Height="28"
                        Margin="0,0,8,0"
                        VerticalAlignment="Center"
                        Click="CloseButton_OnClick"/>
            </Grid>

            <DockPanel Grid.Row="1" Margin="16">
                <StackPanel DockPanel.Dock="Top">
                    <Border BorderThickness="0, 0, 0, 2" BorderBrush="#0F1315">
                        <DockPanel>
                            <Image Width="64" Height="64" Margin="0,0,12,0" Source="pack://application:,,,/Assets/rausku-icon-64.png"/>
                            <StackPanel VerticalAlignment="Top">
                                <Border BorderThickness="0, 0, 0, 2" Background="#0F1115" BorderBrush="#113355">
                                    <TextBlock Style="{StaticResource Header}" Text="{Binding HeaderTitle}" FontSize="34" FontWeight="SemiBold"/>
                                </Border>
                                <TextBlock Text="{Binding HeaderSubtitle}" Style="{StaticResource MutedTextBlock}" Margin="0,4,0,0"/>
                            </StackPanel>
                        </DockPanel>
                    </Border>
                </StackPanel>

                <DockPanel DockPanel.Dock="Bottom" Margin="0,12,0,0">
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                        <Button
                                Style="{StaticResource SecondaryIconButton}"
                                Tag="ArrowLeft"
                                Content="Back"
                                Command="{Binding BackCommand}"
                                Margin="0,0,8,0"
                                Visibility="{Binding ShowBackButton, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        <Button
                                Style="{StaticResource SecondaryIconButton}"
                                Tag="ArrowRight"
                                Content="Next"
                                Command="{Binding NextCommand}"
                                Margin="0,0,8,0"
                                Visibility="{Binding ShowNextButton, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        <Button
                                Style="{StaticResource GreenIconButton}"
                                Tag="Play"
                                Content="Start Workspace"
                                Command="{Binding StartCommand}"
                                Margin="0,0,8,0"
                                Visibility="{Binding ShowStartButton, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        <Button
                                Style="{StaticResource IconButton}"
                                Tag="Times"
                                Content="Cancel"
                                Command="{Binding CancelCommand}"
                                Margin="0,0,8,0"
                                Visibility="{Binding ShowCancelButton, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        <Button
                                Style="{StaticResource SecondaryIconButton}"
                                Tag="Wrench"
                                Content="Fix Problems"
                                Command="{Binding FixProblemsCommand}"
                                Margin="0,0,8,0"
                                Visibility="{Binding ShowFixProblemsButton, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        <Button
                                Style="{StaticResource SecondaryIconButton}"
                                Tag="Check"
                                Content="Close"
                                Command="{Binding CloseCommand}"
                                Visibility="{Binding ShowCloseButton, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </StackPanel>
                    <TextBlock DockPanel.Dock="Right" Style="{StaticResource MutedTextBlock}" Text="{Binding Status}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                </DockPanel>

                <Border Background="{StaticResource Card}" CornerRadius="0 0 6 6" Padding="16">
                    <DockPanel>
                        <ContentControl Content="{Binding CurrentStepView}"/>
                    </DockPanel>
                </Border>
            </DockPanel>
        </Grid>
    </Border>
</Window>

