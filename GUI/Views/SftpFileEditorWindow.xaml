<Window x:Class="RauskuClaw.GUI.Views.SftpFileEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SFTP File Editor"
        Height="640"
        Width="920"
        MinHeight="420"
        MinWidth="640"
        WindowStartupLocation="CenterOwner"
        Background="#0F1115"
        Foreground="#E6EAF2">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#151A22" BorderBrush="#2A3240" BorderThickness="1" Padding="10" Margin="0,0,0,8">
            <StackPanel>
                <TextBlock Text="Remote file" Foreground="#9AA3B2"/>
                <TextBlock x:Name="RemotePathTextBlock" Foreground="#E6EAF2" TextTrimming="CharacterEllipsis"/>
                <TextBlock Text="Local temp file" Foreground="#9AA3B2" Margin="0,8,0,0"/>
                <TextBlock x:Name="TempPathTextBlock" Foreground="#E6EAF2" TextTrimming="CharacterEllipsis"/>
            </StackPanel>
        </Border>

        <TextBox Grid.Row="1"
                 x:Name="EditorTextBox"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 TextWrapping="NoWrap"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 FontFamily="Consolas"
                 FontSize="12"
                 Background="#0A0C0E"
                 Foreground="#E6EAF2"
                 BorderBrush="#2A3240"
                 BorderThickness="1"/>

        <DockPanel Grid.Row="2" Margin="0,8,0,0">
            <TextBlock x:Name="StatusTextBlock"
                       DockPanel.Dock="Left"
                       VerticalAlignment="Center"
                       Foreground="#9AA3B2"
                       Text="Ready"/>
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button Content="Save Temp"
                        Style="{StaticResource SecondaryButton}"
                        Padding="12,6"
                        Margin="0,0,8,0"
                        Click="SaveTempButton_OnClick"/>
                <Button x:Name="UploadButton"
                        Content="Upload to Server"
                        Style="{StaticResource GreenButton}"
                        Padding="12,6"
                        Margin="0,0,8,0"
                        Click="UploadButton_OnClick"/>
                <Button Content="Close"
                        Style="{StaticResource SecondaryButton}"
                        Padding="12,6"
                        Click="CloseButton_OnClick"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
