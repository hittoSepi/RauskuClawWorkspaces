<UserControl x:Class="RauskuClaw.GUI.Views.Controls.ResourceUsagePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Name="Root"
             d:DesignHeight="260"
             d:DesignWidth="780">
    <Border Background="#111722"
            BorderBrush="#2A3240"
            BorderThickness="1"
            CornerRadius="10"
            Padding="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="VM Resource Usage"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Foreground="#E6EAF2"/>
                    <TextBlock Text="CPU / RAM from QEMU process, disk from workspace qcow2 size."
                               Margin="0,3,0,0"
                               FontSize="11"
                               Foreground="#9AA3B2"/>
                </StackPanel>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            Visibility="{Binding ElementName=Root, Path=AllowScopeToggle, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Button Content="All"
                            Click="OnShowCombinedClicked"
                            Padding="10,5"
                            Margin="0,0,6,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SecondaryIconButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=Root, Path=IsCombinedMode}" Value="True">
                                        <Setter Property="Background" Value="#2A3240"/>
                                        <Setter Property="BorderBrush" Value="#4DA3FF"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="Selected VM"
                            Click="OnShowSelectedClicked"
                            IsEnabled="{Binding ElementName=Root, Path=HasSelectedWorkspace}"
                            Padding="10,5">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SecondaryIconButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=Root, Path=IsCombinedMode}" Value="False">
                                        <Setter Property="Background" Value="#2A3240"/>
                                        <Setter Property="BorderBrush" Value="#4DA3FF"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1"
                  Visibility="{Binding ElementName=Root, Path=IsCombinedMode, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#0F1115" BorderBrush="#2A3240" BorderThickness="1" CornerRadius="8" Padding="10" Margin="0,0,8,0">
                        <StackPanel>
                            <TextBlock Text="Total CPU" Foreground="#9AA3B2" FontSize="11"/>
                            <TextBlock Text="{Binding TotalCpuUsagePercent, StringFormat={}{0:0.0}%}" Foreground="#E6EAF2" FontSize="18" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="1" Background="#0F1115" BorderBrush="#2A3240" BorderThickness="1" CornerRadius="8" Padding="10" Margin="0,0,8,0">
                        <StackPanel>
                            <TextBlock Text="Total RAM" Foreground="#9AA3B2" FontSize="11"/>
                            <TextBlock Text="{Binding TotalMemoryUsageMb, StringFormat={}{0} MB}" Foreground="#E6EAF2" FontSize="18" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="2" Background="#0F1115" BorderBrush="#2A3240" BorderThickness="1" CornerRadius="8" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Total Disk" Foreground="#9AA3B2" FontSize="11"/>
                            <TextBlock Text="{Binding TotalDiskUsageMb, StringFormat={}{0:0.0} MB}" Foreground="#E6EAF2" FontSize="18" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <Border Grid.Row="1"
                        Background="#0F1115"
                        BorderBrush="#2A3240"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="{Binding RunningWorkspaceCount, StringFormat=Running VMs: {0}}"
                                   Foreground="#9AA3B2"
                                   FontSize="11"
                                   Margin="0,0,0,8"/>

                        <ListBox Grid.Row="1"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Foreground="#E6EAF2"
                                 ItemsSource="{Binding RunningWorkspaces}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Foreground="#E6EAF2"
                                                   FontSize="12">
                                            <Run Text="{Binding Name}"/>
                                            <Run Text="  "/>
                                            <Run Text="CPU "/>
                                            <Run Text="{Binding RuntimeCpuUsageText}"/>
                                            <Run Text=" | RAM "/>
                                            <Run Text="{Binding RuntimeMemoryUsageText}"/>
                                            <Run Text=" | Disk "/>
                                            <Run Text="{Binding RuntimeDiskUsageText}"/>
                                        </TextBlock>

                                        <TextBlock Grid.Column="1"
                                                   Margin="8,0,0,0"
                                                   Foreground="#6A7382"
                                                   FontSize="11"
                                                   Text="{Binding StatusText}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Row="1"
                  Visibility="{Binding ElementName=Root, Path=IsCombinedMode, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                <Border Background="#0F1115"
                        BorderBrush="#2A3240"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12">
                    <Grid>
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedWorkspace}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0"
                                   Text="{Binding SelectedWorkspace.Name}"
                                   Foreground="#E6EAF2"
                                   FontSize="16"
                                   FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="1"
                                   Margin="0,8,0,0"
                                   Foreground="#9AA3B2"
                                   FontSize="12">
                            <Run Text="CPU "/>
                            <Run Text="{Binding SelectedWorkspace.RuntimeCpuUsageText}"/>
                            <Run Text=" | RAM "/>
                            <Run Text="{Binding SelectedWorkspace.RuntimeMemoryUsageText}"/>
                            <Run Text=" | Disk "/>
                            <Run Text="{Binding SelectedWorkspace.RuntimeDiskUsageText}"/>
                            <Run Text=" | Status "/>
                            <Run Text="{Binding SelectedWorkspace.StatusText}"/>
                        </TextBlock>
                    </Grid>
                </Border>

                <Border Background="#0F1115"
                        BorderBrush="#2A3240"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedWorkspace}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock Text="No workspace selected."
                               Foreground="#9AA3B2"
                               FontSize="12"/>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
