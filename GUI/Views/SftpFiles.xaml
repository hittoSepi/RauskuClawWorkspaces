<UserControl x:Class="RauskuClaw.GUI.Views.SftpFiles"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             Background="#0F1115">
    <DockPanel LastChildFill="True">
        <DockPanel DockPanel.Dock="Top" Margin="0,0,0,6" LastChildFill="False">
            <TextBlock Text="SFTP Files" FontWeight="SemiBold" Foreground="#E6EAF2" VerticalAlignment="Center" Margin="12,8,0,8"/>
            <TextBlock Text="{Binding StatusText}" Foreground="#9AA3B2" VerticalAlignment="Center" Margin="12,8,0,8"/>
            <Button Content="Refresh" Command="{Binding RefreshCommand}" Style="{StaticResource SecondaryButton}" Padding="12,4" DockPanel.Dock="Right" Margin="0,8,8,8"/>
            <Button Content="Disconnect" Command="{Binding DisconnectCommand}" Style="{StaticResource RedButton}" Padding="12,4" DockPanel.Dock="Right" Margin="0,8,8,8"/>
        </DockPanel>

        <Border DockPanel.Dock="Top" Background="#151A22" BorderBrush="#2A3240" BorderThickness="0,1,0,1" Padding="10,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Path:" Foreground="#9AA3B2" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="{Binding CurrentPath}" Foreground="#E6EAF2" VerticalAlignment="Center" Margin="8,0,8,0" TextTrimming="CharacterEllipsis"/>
                <Button Grid.Column="2" Content="Up" Command="{Binding UpCommand}" Style="{StaticResource SecondaryButton}" Padding="10,4"/>
            </Grid>
        </Border>

        <DockPanel DockPanel.Dock="Bottom" Margin="0,8,0,0">
            <Border DockPanel.Dock="Top" Background="#151A22" BorderBrush="#2A3240" BorderThickness="1" Padding="10">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Content="Upload..." Command="{Binding UploadCommand}" Style="{StaticResource SecondaryButton}" Padding="12,4" Margin="0,0,8,0"/>
                        <Button Content="Download Selected..." Command="{Binding DownloadCommand}" Style="{StaticResource SecondaryButton}" Padding="12,4" Margin="0,0,8,0"/>
                        <Button Content="Open Selected Folder" Command="{Binding OpenCommand}" Style="{StaticResource SecondaryButton}" Padding="12,4" Margin="0,0,8,0"/>
                        <Button Content="Delete Selected" Command="{Binding DeleteCommand}" Style="{StaticResource RedButton}" Padding="12,4"/>
                    </StackPanel>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="220"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="New folder:" Foreground="#9AA3B2" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding NewFolderName, UpdateSourceTrigger=PropertyChanged}" Margin="8,0,8,0"/>
                        <Button Grid.Column="2" Content="Create" Command="{Binding CreateFolderCommand}" Style="{StaticResource SecondaryButton}" Padding="10,4"/>

                        <TextBlock Grid.Column="3" Text="Selected entry can be renamed below." Foreground="#6A7382" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="220"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Rename to:" Foreground="#9AA3B2" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding RenameTarget, UpdateSourceTrigger=PropertyChanged}" Margin="8,0,8,0"/>
                        <Button Grid.Column="2" Content="Rename Selected" Command="{Binding RenameCommand}" Style="{StaticResource SecondaryButton}" Padding="10,4"/>
                    </Grid>
                </StackPanel>
            </Border>
        </DockPanel>

        <DataGrid ItemsSource="{Binding Entries}"
                  SelectedItem="{Binding SelectedEntry}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Background="#0A0C0E"
                  Foreground="#E6EAF2"
                  BorderBrush="#2A3240"
                  BorderThickness="0"
                  HeadersVisibility="Column"
                  GridLinesVisibility="None"
                  HorizontalGridLinesBrush="#1B2230"
                  VerticalGridLinesBrush="#1B2230"
                  RowHeaderWidth="0"
                  CanUserResizeRows="False"
                  Margin="0,8,0,0">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#151A22"/>
                    <Setter Property="Foreground" Value="#9AA3B2"/>
                    <Setter Property="BorderBrush" Value="#2A3240"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    <Setter Property="Padding" Value="8,6"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Style>
                <Style TargetType="DataGridCell">
                    <Setter Property="Background" Value="#0A0C0E"/>
                    <Setter Property="Foreground" Value="#E6EAF2"/>
                    <Setter Property="BorderBrush" Value="#1B2230"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    <Setter Property="Padding" Value="8,4"/>
                </Style>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="#0A0C0E"/>
                    <Setter Property="Foreground" Value="#E6EAF2"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#111722"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#1A2A3E"/>
                            <Setter Property="Foreground" Value="#E6EAF2"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="3*"/>
                <DataGridTextColumn Header="Type" Binding="{Binding TypeText}" Width="*"/>
                <DataGridTextColumn Header="Size" Binding="{Binding SizeText}" Width="*"/>
                <DataGridTextColumn Header="Modified" Binding="{Binding LastWriteTime}" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
