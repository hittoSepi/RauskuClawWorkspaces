<UserControl x:Class="RauskuClaw.GUI.Views.WorkspaceSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="#0F1115">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="16">
                <TextBlock Text="Workspace Settings" FontSize="24" FontWeight="Bold" Foreground="#E6EAF2" Margin="0,0,0,16"/>

                <Border Background="#151A22" BorderBrush="#2A3240" BorderThickness="1" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Workspace Storage" FontSize="16" FontWeight="SemiBold" Foreground="#E6EAF2" Margin="0,0,0,12"/>

                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Workspace Root:" Foreground="#9AA3B2" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" Text="{Binding WorkspaceRootPath, UpdateSourceTrigger=PropertyChanged}"
                                     Background="#0A0C0E" Foreground="#E6EAF2" BorderBrush="#2A3240"
                                     Padding="8,4" VerticalAlignment="Center"/>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Selected Host Path:" Foreground="#9AA3B2" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" Text="{Binding SelectedWorkspaceHostPath, Mode=OneWay}"
                                     IsReadOnly="True"
                                     Background="#0A0C0E" Foreground="#E6EAF2" BorderBrush="#2A3240"
                                     Padding="8,4" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <Button Grid.Column="2"
                                    Command="{Binding OpenSelectedWorkspaceFolderCommand}"
                                    Style="{StaticResource SecondaryIconButton}"
                                    Tag="FolderOpen"
                                    Content="Open Folder"
                                    Padding="12,4"
                                    Cursor="Hand"
                                    VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="1"
                Background="#0F1115"
                BorderBrush="#2A3240"
                BorderThickness="0,1,0,0"
                Padding="16,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           Foreground="#9AA3B2"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource GreenIconButton}" Tag="FloppyDisk" Content="Save Workspace Settings"
                        Padding="16,8" Cursor="Hand"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
