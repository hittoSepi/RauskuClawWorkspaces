<UserControl x:Class="RauskuClaw.GUI.Views.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="#0F1115">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="16">
                <TextBlock Text="General Settings" FontSize="24" FontWeight="Bold" Foreground="#E6EAF2" Margin="0,0,0,16"/>

                <Border Background="#151A22" BorderBrush="#2A3240" BorderThickness="1" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Application Settings" FontSize="16" FontWeight="SemiBold" Foreground="#E6EAF2" Margin="0,0,0,12"/>

                        <CheckBox Content="Auto-start VMs on application launch" IsChecked="{Binding AutoStartVMs}"
                                  Foreground="#E6EAF2" Margin="0,0,0,8"/>

                        <CheckBox Content="Minimize to system tray" IsChecked="{Binding MinimizeToTray}"
                                  Foreground="#E6EAF2" Margin="0,0,0,8"/>

                        <CheckBox Content="Check for updates on startup" IsChecked="{Binding CheckUpdates}"
                                  Foreground="#E6EAF2"/>

                        <CheckBox Content="Show start page on startup" IsChecked="{Binding ShowStartPageOnStartup}"
                                  Foreground="#E6EAF2" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="1"
                Background="#0F1115"
                BorderBrush="#2A3240"
                BorderThickness="0,1,0,0"
                Padding="16,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           Foreground="#9AA3B2"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Command="{Binding ResetCommand}"
                            Style="{StaticResource RedIconButton}" Tag="RotateLeft" Content="Reset to Defaults"
                            Padding="16,8" Margin="0,0,8,0" Cursor="Hand"/>
                    <Button Command="{Binding SaveCommand}"
                            Style="{StaticResource GreenIconButton}" Tag="FloppyDisk" Content="Save Settings"
                            Padding="16,8" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
