<UserControl x:Class="RauskuClaw.GUI.Views.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="#0F1115">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">
            <!-- Header -->
            <TextBlock Text="Settings" FontSize="24" FontWeight="Bold" Foreground="#E6EAF2" Margin="0,0,0,16"/>

            <!-- QEMU Settings Section -->
            <Border Background="#151A22" BorderBrush="#2A3240" BorderThickness="1" Padding="16" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="QEMU Configuration" FontSize="16" FontWeight="SemiBold" Foreground="#E6EAF2" Margin="0,0,0,12"/>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="QEMU Path:" Foreground="#9AA3B2" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding QemuPath, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#0A0C0E" Foreground="#E6EAF2" BorderBrush="#2A3240"
                                 Padding="8,4" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <Button Grid.Column="2" Content="Browse..." Command="{Binding BrowseQemuPathCommand}"
                                Background="#2A3240" Foreground="#E6EAF2" BorderThickness="0"
                                Padding="12,4" Cursor="Hand" VerticalAlignment="Center"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="VM Base Path:" Foreground="#9AA3B2" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding VmBasePath, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#0A0C0E" Foreground="#E6EAF2" BorderBrush="#2A3240"
                                 Padding="8,4" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <Button Grid.Column="2" Content="Browse..." Command="{Binding BrowseVmPathCommand}"
                                Background="#2A3240" Foreground="#E6EAF2" BorderThickness="0"
                                Padding="12,4" Cursor="Hand" VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Default VM Settings Section -->
            <Border Background="#151A22" BorderBrush="#2A3240" BorderThickness="1" Padding="16" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Default VM Configuration" FontSize="16" FontWeight="SemiBold" Foreground="#E6EAF2" Margin="0,0,0,12"/>
                    <TextBlock Text="{Binding HostLimitsText}" Foreground="#9AA3B2" Margin="0,0,0,12"/>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Memory (MB):" Foreground="#9AA3B2" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1"
                                  ItemsSource="{Binding DefaultMemoryOptions}"
                                  SelectedItem="{Binding DefaultMemoryMb, UpdateSourceTrigger=PropertyChanged}"
                                  IsEditable="True"
                                  Background="#0A0C0E" Foreground="#E6EAF2" BorderBrush="#2A3240"
                                  Padding="8,4" VerticalAlignment="Center"/>
                    </Grid>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="CPU Cores:" Foreground="#9AA3B2" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1"
                                  ItemsSource="{Binding DefaultCpuCoreOptions}"
                                  SelectedItem="{Binding DefaultCpuCores, UpdateSourceTrigger=PropertyChanged}"
                                  Background="#0A0C0E" Foreground="#E6EAF2" BorderBrush="#2A3240"
                                  Padding="8,4" VerticalAlignment="Center"/>
                    </Grid>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Default Username:" Foreground="#9AA3B2" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding DefaultUsername, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#0A0C0E" Foreground="#E6EAF2" BorderBrush="#2A3240"
                                 Padding="8,4" VerticalAlignment="Center"/>
                    </Grid>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="" />
                        <Button Grid.Column="1"
                                Content="Use Host Defaults"
                                Command="{Binding UseHostDefaultsCommand}"
                                Background="#2A3240" Foreground="#E6EAF2" BorderThickness="0"
                                Padding="12,4" HorizontalAlignment="Left" Cursor="Hand"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Default Hostname:" Foreground="#9AA3B2" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding DefaultHostname, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#0A0C0E" Foreground="#E6EAF2" BorderBrush="#2A3240"
                                 Padding="8,4" VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Port Settings Section -->
            <Border Background="#151A22" BorderBrush="#2A3240" BorderThickness="1" Padding="16" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Port Configuration" FontSize="16" FontWeight="SemiBold" Foreground="#E6EAF2" Margin="0,0,0,12"/>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="" />
                        <Button Grid.Column="1"
                                Content="Auto Assign Ports"
                                Command="{Binding AutoAssignStartingPortsCommand}"
                                Background="#2A3240" Foreground="#E6EAF2" BorderThickness="0"
                                Padding="12,4" HorizontalAlignment="Left" Cursor="Hand"/>
                    </Grid>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Starting SSH Port:" Foreground="#9AA3B2" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding StartingSshPort, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#0A0C0E" Foreground="#E6EAF2" BorderBrush="#2A3240"
                                 Padding="8,4" VerticalAlignment="Center"/>
                    </Grid>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Starting API Port:" Foreground="#9AA3B2" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding StartingApiPort, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#0A0C0E" Foreground="#E6EAF2" BorderBrush="#2A3240"
                                 Padding="8,4" VerticalAlignment="Center"/>
                    </Grid>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Starting UI v2 Port:" Foreground="#9AA3B2" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding StartingUiV2Port, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#0A0C0E" Foreground="#E6EAF2" BorderBrush="#2A3240"
                                 Padding="8,4" VerticalAlignment="Center"/>
                    </Grid>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Starting UI v1 Port:" Foreground="#9AA3B2" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding StartingUiV1Port, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#0A0C0E" Foreground="#E6EAF2" BorderBrush="#2A3240"
                                 Padding="8,4" VerticalAlignment="Center"/>
                    </Grid>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Starting QMP Port:" Foreground="#9AA3B2" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding StartingQmpPort, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#0A0C0E" Foreground="#E6EAF2" BorderBrush="#2A3240"
                                 Padding="8,4" VerticalAlignment="Center"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Starting Serial Port:" Foreground="#9AA3B2" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding StartingSerialPort, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#0A0C0E" Foreground="#E6EAF2" BorderBrush="#2A3240"
                                 Padding="8,4" VerticalAlignment="Center"/>
                    </Grid>

                    <Border Margin="0,10,0,0"
                            Padding="10,6"
                            CornerRadius="10"
                            Background="#3A1E22"
                            BorderBrush="#DA3633"
                            BorderThickness="1">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding PortWarningMessage}" Value="">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding PortWarningMessage}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="{Binding PortWarningMessage}"
                                   Foreground="#FF9B9B"
                                   FontWeight="SemiBold"
                                   TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Application Settings Section -->
            <Border Background="#151A22" BorderBrush="#2A3240" BorderThickness="1" Padding="16" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Application Settings" FontSize="16" FontWeight="SemiBold" Foreground="#E6EAF2" Margin="0,0,0,12"/>

                    <CheckBox Content="Auto-start VMs on application launch" IsChecked="{Binding AutoStartVMs}"
                              Foreground="#E6EAF2" Margin="0,0,0,8"/>

                    <CheckBox Content="Minimize to system tray" IsChecked="{Binding MinimizeToTray}"
                              Foreground="#E6EAF2" Margin="0,0,0,8"/>

                    <CheckBox Content="Check for updates on startup" IsChecked="{Binding CheckUpdates}"
                              Foreground="#E6EAF2"/>
                </StackPanel>
            </Border>

            <!-- Secret Manager Settings Section -->
            <Border Background="#151A22" BorderBrush="#2A3240" BorderThickness="1" Padding="16" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Secret Manager Integration" FontSize="16" FontWeight="SemiBold" Foreground="#E6EAF2" Margin="0,0,0,12"/>

                    <TextBlock Text="Holvi Configuration" FontSize="14" FontWeight="SemiBold" Foreground="#4DA3FF" Margin="0,0,0,12"/>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="API Key:" Foreground="#9AA3B2" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding HolviApiKey, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#0A0C0E" Foreground="#E6EAF2" BorderBrush="#2A3240"
                                 Padding="8,4" VerticalAlignment="Center"/>
                    </Grid>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Project ID:" Foreground="#9AA3B2" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding HolviProjectId, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#0A0C0E" Foreground="#E6EAF2" BorderBrush="#2A3240"
                                 Padding="8,4" VerticalAlignment="Center"/>
                    </Grid>

                    <TextBlock Text="Infisical Configuration" FontSize="14" FontWeight="SemiBold" Foreground="#4DA3FF" Margin="0,16,0,12"/>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Client ID:" Foreground="#9AA3B2" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding InfisicalClientId, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#0A0C0E" Foreground="#E6EAF2" BorderBrush="#2A3240"
                                 Padding="8,4" VerticalAlignment="Center"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Client Secret:" Foreground="#9AA3B2" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding InfisicalClientSecret, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#0A0C0E" Foreground="#E6EAF2" BorderBrush="#2A3240"
                                 Padding="8,4" VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <Grid Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           Foreground="#9AA3B2"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Reset to Defaults" Command="{Binding ResetCommand}"
                            Background="#DA3633" Foreground="#E6EAF2" BorderThickness="0"
                            Padding="16,8" Margin="0,0,8,0" Cursor="Hand"/>
                    <Button Content="Save Settings" Command="{Binding SaveCommand}"
                            Style="{StaticResource GreenButton}" Foreground="#E6EAF2"
                            Padding="16,8" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
